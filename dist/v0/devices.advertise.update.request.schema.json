{
  "$id": "https://schemas.tillhub.com/v0/devices.advertise.update.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "minProperties": 1,
  "type": "object",
  "required": [],
  "properties": {
    "name": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 3,
          "maxLength": 255
        },
        {
          "type": "null"
        }
      ]
    },
    "client_id": {
      "type": "string",
      "format": "uuid"
    },
    "device_id": {
      "type": "string",
      "format": "uuid"
    },
    "register": {
      "type": "string",
      "format": "uuid"
    },
    "device_configuration": {
      "type": "object",
      "properties": {
        "network": {
          "type": "object",
          "properties": {
            "ip": {
              "type": "string",
              "oneOf": [
                {
                  "format": "ipv4"
                },
                {
                  "format": "ipv6"
                }
              ]
            },
            "host": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "port": {
              "type": "integer"
            },
            "protocol": {
              "type": "string",
              "enum": [
                "http",
                "https"
              ]
            }
          }
        },
        "public_key": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "auth": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "x.509"
                  ]
                }
              }
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "type": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "cfd",
            "printer"
          ]
        },
        {
          "type": "null"
        }
      ]
    },
    "contents": {
      "oneOf": [
        {
          "type": "object",
          "description": "CFD displayable device contents",
          "additionalProperties": false,
          "properties": {
            "idle": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "welcome": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "cart": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "payment": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "payment_terminal": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "payment_approved": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "goodbye": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "logo": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "runtime": {
              "oneOf": [
                {
                  "type": "string",
                  "format": "uuid"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
