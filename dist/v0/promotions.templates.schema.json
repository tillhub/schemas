{
  "$id": "https://schemas.tillhub.com/v0/promotions.templates.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "inputs",
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "product_property:and_or_concat:output_properties"
          ]
        },
        "inputs": {
          "oneOf": [
            {
              "type": "object"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "inputs",
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "product_property:exclusive_bundle:output_properties"
          ]
        },
        "inputs": {
          "oneOf": [
            {
              "type": "object"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "inputs",
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "product_property:entire_basket:output_properties"
          ]
        },
        "inputs": {
          "type": "object",
          "required": [
            "promotable_products",
            "promotable_product_groups",
            "output"
          ],
          "properties": {
            "promotable_products": {
              "type": "array",
              "items": {
                "required": [
                  "property",
                  "value"
                ],
                "properties": {
                  "property": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            "promotable_product_groups": {
              "type": "array",
              "items": {
                "required": [
                  "property",
                  "value"
                ],
                "properties": {
                  "property": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            "output": {
              "type": "object",
              "required": [
                "property",
                "value"
              ],
              "properties": {
                "property": {
                  "type": "string",
                  "enum": [
                    "amount_total_gross",
                    "percentage_discount",
                    "amount_discount"
                  ]
                },
                "value": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  ]
}
