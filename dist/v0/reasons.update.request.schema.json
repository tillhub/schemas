{
  "$id": "https://schemas.tillhub.com/v0/reasons.update.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [],
  "properties": {
    "name": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        {
          "type": "null"
        }
      ]
    },
    "description": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 4096
        },
        {
          "type": "null"
        }
      ]
    },
    "behavior": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "stock": {
              "type": "string",
              "enum": [
                "restock"
              ]
            },
            "stock_location": {
              "type": "string",
              "enum": [
                "current"
              ]
            },
            "navigation": {
              "oneOf": [
                {
                  "description": "defines automatic navigation, e.g. directly navigating to payments when a reason for an item refund was given",
                  "type": "string",
                  "enum": [
                    "payment_view",
                    "carts",
                    "ask"
                  ]
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        },
        {
          "type": "null"
        },
        {
          "type": "null"
        }
      ]
    },
    "deleted": {
      "type": "boolean"
    },
    "active": {
      "type": "boolean"
    },
    "type": {
      "type": "string",
      "enum": [
        "refund",
        "stock_change",
        "expense",
        "deposit"
      ]
    },
    "noted_required": {
      "type": "boolean",
      "default": false
    },
    "image_required": {
      "type": "boolean",
      "default": false
    },
    "approval_required": {
      "type": "boolean",
      "default": false
    }
  }
}
