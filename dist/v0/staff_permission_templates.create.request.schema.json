{
  "$id": "https://schemas.tillhub.com/v0/staff_permission_templates.create.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "name",
    "scopes"
  ],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 64
    },
    "scopes": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "active": {
      "type": "boolean"
    },
    "deleted": {
      "type": "boolean"
    }
  },
  "type": "object"
}
