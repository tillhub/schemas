{
  "$id": "https://schemas.tillhub.com/v0/favourites.create.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "name",
    "client_id"
  ],
  "properties": {
    "metadata": {
      "type": "object"
    },
    "tabs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "client_id": {
            "type": "string",
            "format": "uuid"
          },
          "order_index": {
            "type": "number",
            "multipleOf": 1,
            "minimum": 0,
            "maximum": 24
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "product",
                    "discount",
                    "voucher_action",
                    "custom_function",
                    "voucher",
                    "voucher_system",
                    "product_group"
                  ]
                },
                "client_id": {
                  "type": "string",
                  "format": "uuid"
                },
                "object_id": {
                  "type": "string",
                  "format": "uuid"
                },
                "order_index": {
                  "type": "number",
                  "multipleOf": 1,
                  "minimum": 1,
                  "maximum": 25
                }
              },
              "required": [
                "type",
                "client_id",
                "object_id",
                "order_index"
              ]
            },
            "default": []
          }
        },
        "required": [
          "name",
          "client_id",
          "order_index",
          "items"
        ]
      },
      "default": []
    },
    "registers": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": []
    },
    "branches": {
      "oneOf": [
        {
          "description": "DEPRECATED. Set null or ignore. Use locations. In case of using it, it will redirect the value to locations",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": []
    },
    "name": {
      "type": "string"
    },
    "client_id": {
      "type": "string",
      "format": "uuid"
    },
    "temporary_id": {
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "null"
        }
      ]
    },
    "is_local": {
      "type": "boolean",
      "default": false
    },
    "deleted": {
      "type": "boolean",
      "default": false
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "locations": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "branch_groups": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "type": "object"
}
