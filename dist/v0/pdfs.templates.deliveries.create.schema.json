{
  "$id": "https://schemas.tillhub.com/v0/pdfs.templates.deliveries.create.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "items",
    "delivery"
  ],
  "properties": {
    "delivery": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "created_at": {
          "additionalProperties": false,
          "type": "string",
          "format": "date-time"
        },
        "received_token": {
          "type": "string"
        },
        "dispatched_token": {
          "type": "string"
        },
        "timezone": {
          "description": "IANA timezone.",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "required": [
        "id"
      ]
    },
    "img_url": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "logo": {
      "anyOf": [
        {
          "type": "string",
          "format": "url"
        },
        {
          "type": "null"
        }
      ]
    },
    "logo_recipient": {
      "anyOf": [
        {
          "type": "string",
          "format": "url"
        },
        {
          "type": "null"
        }
      ]
    },
    "sender": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "lines",
            "street",
            "street_number",
            "locality",
            "region",
            "postal_code",
            "country",
            "type"
          ],
          "properties": {
            "lines": {
              "oneOf": [
                {
                  "type": "array",
                  "minItems": 1,
                  "maxItems": 4,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "street": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "street_number": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "locality": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "region": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "postal_code": {
              "oneOf": [
                {
                  "type": "string",
                  "maxLength": 10
                },
                {
                  "type": "null"
                }
              ]
            },
            "country": {
              "oneOf": [
                {
                  "type": "string",
                  "minLength": 2,
                  "maxLength": 2,
                  "pattern": "^[A-Z]{2}$"
                },
                {
                  "type": "null"
                }
              ],
              "default": null
            },
            "type": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": [
                    "local",
                    "delivery",
                    "billing"
                  ]
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "addressee": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "firstname": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 128
            },
            {
              "type": "null"
            }
          ]
        },
        "lastname": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 128
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "recipient": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "lines",
            "street",
            "street_number",
            "locality",
            "region",
            "postal_code",
            "country",
            "type"
          ],
          "properties": {
            "lines": {
              "oneOf": [
                {
                  "type": "array",
                  "minItems": 1,
                  "maxItems": 4,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "street": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "street_number": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "locality": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "region": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "postal_code": {
              "oneOf": [
                {
                  "type": "string",
                  "maxLength": 10
                },
                {
                  "type": "null"
                }
              ]
            },
            "country": {
              "oneOf": [
                {
                  "type": "string",
                  "minLength": 2,
                  "maxLength": 2,
                  "pattern": "^[A-Z]{2}$"
                },
                {
                  "type": "null"
                }
              ],
              "default": null
            },
            "type": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": [
                    "local",
                    "delivery",
                    "billing"
                  ]
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "contact": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "phone": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object"
      }
    },
    "text": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "null"
        }
      ]
    },
    "from": {
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "null"
        }
      ]
    },
    "to": {
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
