{
  "$id": "https://schemas.tillhub.com/v1/table_layout.create.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "name",
    "location",
    "active"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "location": {
      "type": "string",
      "format": "uuid"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "layout": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    },
    "table_count": {
      "type": "number",
      "minimum": 0
    },
    "combinations": {
      "type": "array",
      "additionalProperties": true,
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "min_party_size": {
            "type": "number",
            "minimum": 0
          },
          "max_party_size": {
            "type": "number",
            "minimum": 0
          },
          "is_bookable_externally": {
            "type": "boolean"
          },
          "tables": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "required": [
          "id",
          "min_party_size",
          "max_party_size",
          "is_bookable_externally",
          "tables"
        ]
      }
    }
  },
  "type": "object"
}
