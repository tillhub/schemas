{
  "$id": "https://schemas.tillhub.com/v1/products.prices.book.update.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [],
  "properties": {
    "custom_id": {
      "description": "The Price Book custom id",
      "type": "string",
      "maxLength": 128
    },
    "name": {
      "oneOf": [
        {
          "description": "The Price Book name",
          "type": "string",
          "maxLength": 512
        },
        {
          "type": "null"
        }
      ]
    },
    "constraints": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "time": {
              "oneOf": [
                {},
                {
                  "type": "null"
                }
              ]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "locations": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "branch_groups": {
      "oneOf": [
        {
          "description": "If defined then only these branch groups (plus specified locations if any) will be using this price book",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "active": {
      "type": "boolean"
    },
    "deleted": {
      "type": "boolean"
    }
  }
}
