{
  "name": "@tillhub/schemas",
  "version": "1.4.1",
  "private": false,
  "description": "All Tillhub API OpenAPI 3 compatible JSON Schemas.",
  "main": "./lib/index.js",
  "scripts": {
    "test": "NODE_ENV=test nyc tape 'test/**/*.spec.js' | tap-spec && nyc report",
    "coverage": "nyc check-coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "tdd": "NODE_ENV=test DEBUG=api:* nodemon --exec nodemon test/tdd-runner.js",
    "tdd:all": "NODE_ENV=test DEBUG=api:* nodemon --exec nodemon test/tdd-runner.js test/**/*.spec.js",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "precommit": "git add -A",
    "commit": "npm run precommit && git-cz",
    "preversion": "npm run lint && npm test && npm run docs:md && git add -A .",
    "postversion": "TAG=$(echo $(git describe --tags $(git rev-list --tags --max-count=1))) && git tag -a $TAG $TAG -f -m \"$(git log `git describe --tags --abbrev=0 HEAD^`..HEAD --oneline)\" && git push && git push --tags && npm run clean",
    "clean": "rm -rf coverage coverage.lcov .nyc_output"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tillhub/schemas.git"
  },
  "keywords": [
    "tillhub",
    "api",
    "schemas"
  ],
  "author": "Robert Jefe Lindstaedt <robert.lindstaedt@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tillhub/schemas/issues"
  },
  "engines": {
    "node": ">=8.6.0"
  },
  "files": [
    "lib",
    "test",
    "AUTHORS",
    "LICENSE",
    "README.md"
  ],
  "homepage": "https://github.com/tillhub/schemas#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^2.1.1",
    "@semantic-release/git": "^6.0.1",
    "@semantic-release/github": "^4.4.0",
    "@semantic-release/npm": "^3.4.0",
    "@types/node": "^10.0.3",
    "chalk": "^2.4.1",
    "codecov": "^3.0.1",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.22",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "gh-pages": "^1.1.0",
    "glob": "^7.1.2",
    "jsdoc": "^3.5.5",
    "jsdoc-template": "git+https://github.com/braintree/jsdoc-template.git",
    "jsdoc-to-markdown": "^4.0.1",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1",
    "proxyquire": "^2.0.1",
    "semantic-release": "^15.8.1",
    "sinon": "^5.0.3",
    "tap-spec": "^4.1.1",
    "tape": "^4.9.0",
    "tape-nock": "^1.6.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 10,
    "statements": 10,
    "functions": 10,
    "branches": 10,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "json"
    ],
    "require": [],
    "extension": [],
    "cache": true,
    "all": true,
    "report-dir": "./coverage"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "lib/**/*.{js}",
          "docs",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
